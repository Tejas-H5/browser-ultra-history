{
    "manifest_version": 2,
    "name": "Test",
    "version": "1.0",
    "description": "Tryin to make an extension",
    "permissions": ["activeTab", "webNavigation","tabs", "storage", "unlimitedStorage"],
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "test",
        "default_popup": "/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["/dist/content-main.js"]
        }
    ],
    "background": {
        "scripts": ["/dist/background-main.js"],
        "persistent": false
    }
}
